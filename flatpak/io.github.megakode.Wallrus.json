{
    "app-id": "io.github.megakode.Wallrus",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "wallrus",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-pictures/Wallrus:create",
        "--filesystem=~/.local/share/backgrounds:create",
        "--filesystem=~/.local/share/wallrus/palettes:create",
        "--talk-name=org.freedesktop.Flatpak",
        "--metadata=X-DConf=migrate-path=/io/github/megakode/Wallrus/"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/wallrus/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "wallrus",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p .cargo",
                "cp cargo/config.toml .cargo/config.toml",
                "cargo --offline build --release",
                "install -Dm755 target/release/wallrus /app/bin/wallrus",
                "install -Dm644 data/io.github.megakode.Wallrus.desktop /app/share/applications/io.github.megakode.Wallrus.desktop",
                "install -Dm644 data/icons/io.github.megakode.Wallrus.svg /app/share/icons/hicolor/scalable/apps/io.github.megakode.Wallrus.svg",
                "install -Dm644 data/io.github.megakode.Wallrus.metainfo.xml /app/share/metainfo/io.github.megakode.Wallrus.metainfo.xml",
                "mkdir -p /app/share/wallrus/palettes",
                "cp -r data/palettes/* /app/share/wallrus/palettes/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/megakode/wallrus.git",
                    "tag": "v1.0.0"
                },
                "cargo-sources.json",
                {
                    "type": "inline",
                    "contents": "[source.crates-io]\nreplace-with = \"vendored-sources\"\n\n[source.vendored-sources]\ndirectory = \"cargo/vendor\"\n",
                    "dest": "cargo",
                    "dest-filename": "config.toml"
                }
            ]
        }
    ]
}
